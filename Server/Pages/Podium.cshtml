@page
@model PodiumModel
@{
    ViewData["Title"] = "Podium";
    // variant: "pop" | "subtle-slide" | "slow-fade"
    var variant = Model.Variant ?? "pop";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Podium</title>
    <link href="css/app.css" rel="stylesheet" />
    <link href="css/podium.css" rel="stylesheet" />
    <!-- Tailwind CSS (via CDN for simplicity if not present) -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-900 text-white min-h-screen flex items-center justify-center">
    <div class="container mx-auto p-6" role="main" aria-label="Quiz podium">
      <div id="podium-root" class="relative w-full max-w-4xl mx-auto h-[500px] flex items-end justify-center" data-variant="@variant" aria-live="polite">
        <canvas id="confetti-canvas" class="confetti-canvas absolute inset-0 w-full h-full pointer-events-none" aria-hidden="true"></canvas>

        <div class="flex items-end justify-center gap-4 podium-list z-10" role="list" aria-label="Top 3 players">
          @* Render order: 2,1,3 for visual center *@
          @if (Model.Players.Count > 1)
          {
              @await Html.PartialAsync("_PodiumCard", Model.Players[1])
          }
          @if (Model.Players.Count > 0)
          {
              @await Html.PartialAsync("_PodiumCard", Model.Players[0])
          }
          @if (Model.Players.Count > 2)
          {
              @await Html.PartialAsync("_PodiumCard", Model.Players[2])
          }
        </div>
      </div>
    </div>

    <script src="js/podium.js"></script>
    <script>
      // trigger init with variant
      window.PodiumInit && window.PodiumInit({variant: "@variant", reducedMotion: window.matchMedia('(prefers-reduced-motion: reduce)').matches});
    </script>
</body>
</html>
